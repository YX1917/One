<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_music_tag_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="音乐"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_music_content_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="神为什么不回答"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/tv_music_tag_title"/>

    <TextView
        android:id="@+id/tv_music_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="文/苏更生"
        app:layout_constraintLeft_toLeftOf="@+id/tv_music_content_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_music_content_title"
        />

    <ImageView
        android:id="@+id/img_music_picture"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        app:srcCompat="@mipmap/img_music_bg"
        />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_music_picture"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@mipmap/xiami_right"
        />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_music_author"
        app:srcCompat="@mipmap/feeds_music_words"/>

    <ImageButton
        android:id="@+id/img_music_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/transparent_black"
        app:layout_constraintBottom_toBottomOf="@+id/img_music_picture"
        app:layout_constraintLeft_toLeftOf="@+id/img_music_picture"
        app:layout_constraintRight_toRightOf="@+id/img_music_picture"
        app:layout_constraintTop_toTopOf="@+id/img_music_picture"
        app:srcCompat="@mipmap/feeds_radio_play"/>

    <TextView
        android:id="@+id/tv_music_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"/>

    <TextView
        android:id="@+id/tv_music_forward"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="14dp"
        android:lineSpacingExtra="8dp"
        android:text="该怎么给二陈在我心中的位置下一个定义呢？说他是我在尘世遇到的唯一一颗璀璨星辰毫不为过。"
        app:layout_constraintLeft_toLeftOf="@+id/tv_music_singer"
        app:layout_constraintRight_toRightOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/tv_music_singer"/>

    <TextView
        android:id="@+id/tv_music_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="16dp"
        android:text="今天"
        app:layout_constraintLeft_toLeftOf="@+id/tv_music_forward"
        app:layout_constraintTop_toBottomOf="@+id/tv_music_forward"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_music_like"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_movis_date"
        app:layout_constraintRight_toLeftOf="@+id/ibtn_music_share"
        app:layout_constraintTop_toTopOf="@+id/tv_movis_date">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/bubble_like"/>

        <TextView
            android:id="@+id/tv_music_like_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="60"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintLeft_toRightOf="@+id/imageView3"/>
    </android.support.constraint.ConstraintLayout>

    <ImageButton
        android:id="@+id/ibtn_music_share"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/cl_music_like"
        app:layout_constraintRight_toRightOf="@+id/tv_music_forward"
        app:layout_constraintTop_toTopOf="@+id/cl_music_like"
        app:srcCompat="@mipmap/bubble_share"/>


</android.support.constraint.ConstraintLayout>
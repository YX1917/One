<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_movis_tag_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="苏更生专栏"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_movis_content_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="神为什么不回答"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/img_movis_picture"
        app:layout_constraintTop_toBottomOf="@+id/tv_movis_tag_title"/>

    <TextView
        android:id="@+id/tv_movis_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="文/苏更生"
        app:layout_constraintLeft_toLeftOf="@+id/tv_movis_content_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_movis_content_title"/>

    <ImageView
        android:id="@+id/img_movis_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_movis_author"
        app:srcCompat="@mipmap/img_read_bg"/>

    <TextView
        android:id="@+id/tv_read_forward"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:lineSpacingExtra="8dp"
        android:text="我更想自己去看，去听，去爱，我宁愿在黑暗里慢慢走着，也不想投入神的怀抱"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/img_movis_picture"
        app:layout_constraintRight_toRightOf="@+id/img_movis_picture"
        app:layout_constraintTop_toBottomOf="@+id/img_movis_picture"/>

    <TextView
        android:id="@+id/tv_movis_film_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="-1dp"
        android:layout_marginTop="0dp"
        android:text="-- 《迷失东京》"
        app:layout_constraintRight_toRightOf="@+id/tv_read_forward"
        app:layout_constraintTop_toBottomOf="@+id/tv_read_forward"/>

    <TextView
        android:id="@+id/tv_movis_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今天"
        app:layout_constraintBottom_toBottomOf="@+id/cl_music_like"
        app:layout_constraintLeft_toLeftOf="@+id/tv_read_forward"
        app:layout_constraintTop_toTopOf="@+id/cl_music_like"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_music_like"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_movis_film_name"
        app:layout_constraintRight_toLeftOf="@+id/ibtn_movis_share"
        android:layout_marginRight="8dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/bubble_like"/>

        <TextView
            android:id="@+id/tv_movis_like_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="0dp"
            android:text="60"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintLeft_toRightOf="@+id/imageView3"/>
    </android.support.constraint.ConstraintLayout>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/tv_movis_date"
        app:layout_constraintRight_toRightOf="@+id/tv_read_forward"
        app:layout_constraintTop_toTopOf="@+id/tv_movis_date"
        app:layout_constraintVertical_bias="0.666"
        app:srcCompat="@mipmap/bubble_share"
        android:id="@+id/ibtn_movis_share"/>
</android.support.constraint.ConstraintLayout>